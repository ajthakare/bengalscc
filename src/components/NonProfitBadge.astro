---
import { SITE_CONFIG } from '../config';

interface Props {
    size?: 'sm' | 'md' | 'lg';
    showEIN?: boolean;
}

const { size = 'md', showEIN = false } = Astro.props;

const sizeClasses = {
    sm: 'text-xs px-3 py-1.5',
    md: 'text-sm px-4 py-2',
    lg: 'text-base px-6 py-3'
};
---

<div class={`inline-flex items-center gap-2 bg-gradient-to-r from-green-50 to-emerald-50 border-2 border-green-500 rounded-full ${sizeClasses[size]} font-semibold text-green-800`}>
    <span class={size === 'sm' ? 'text-base' : size === 'md' ? 'text-lg' : 'text-xl'}>âœ“</span>
    <div class="flex flex-col">
        <span>{SITE_CONFIG.nonProfit.status}</span>
        {showEIN && (
            <span class="text-xs opacity-75">EIN: {SITE_CONFIG.nonProfit.ein}</span>
        )}
    </div>
</div>
