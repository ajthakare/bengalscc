---
interface Stat {
    label: string;
    value: string;
}

interface Props {
    stats: Stat[];
}

const { stats } = Astro.props;
---

<div class={`grid gap-6 sm:gap-8 justify-items-center ${stats.length === 3 ? 'grid-cols-1 sm:grid-cols-3 max-w-4xl mx-auto' : stats.length === 4 ? 'grid-cols-2 md:grid-cols-4' : 'grid-cols-2 sm:grid-cols-3 lg:grid-cols-4'}`}>
    {stats.map(stat => (
        <div class="text-center w-full max-w-xs">
            <div class="text-3xl sm:text-4xl font-bold text-primary mb-2">
                {stat.value}
            </div>
            <div class="text-sm sm:text-base text-muted">
                {stat.label}
            </div>
        </div>
    ))}
</div>
