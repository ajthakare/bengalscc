---
import '../styles/globals.css';
import '@fontsource-variable/inter/wght.css';
import interWoff2 from '@fontsource-variable/inter/files/inter-latin-wght-normal.woff2?url';
import logo from '../assets/GSCC.svg';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import StickySocial from '../components/StickySocial.astro';
import { SITE_CONFIG } from '../config';

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <title>{title}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
        <meta name="generator" content={Astro.generator} />
        <meta name="description" content={SITE_CONFIG.description} />
        <link rel="icon" type="image/svg+xml" href={logo.src} />
        <link rel="apple-touch-icon" href={logo.src} />
        <link rel="preload" as="font" type="font/woff2" href={interWoff2} crossorigin />
    </head>
    <body class="antialiased text-body" style="background-color: var(--color-bg-body);">
        <div class="flex flex-col min-h-screen px-6 bg-noise sm:px-12">
            <div class="flex flex-col w-full max-w-5xl mx-auto grow">
                <Header />
                <main class="grow"><slot /></main>
                <Footer />
            </div>
        </div>
        <StickySocial />
    </body>
</html>
