    max-width: 300px;
  }

  .log-target {
    color: #6b7280;
    font-size: 13px;
  }

  @media (max-width: 768px) {
    .month-selector-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 12px;
    }

    .logs-header {
      flex-direction: column;
      align-items: stretch;
    }

    .search-box {
      flex: 1;
    }

    .table-container {
      border-radius: 0;
      margin: 0 -24px;
      border-left: none;
      border-right: none;
    }
  }
</style>
