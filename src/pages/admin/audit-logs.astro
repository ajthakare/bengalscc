---
export const prerender = false;

import AdminLayout from '../../layouts/AdminLayout.astro';

// Check authentication
const cookieHeader = Astro.request.headers.get('cookie');
let authenticated = false;
let username = '';
let userRole = 'admin';

if (cookieHeader) {
  try {
    const response = await fetch(
      `${Astro.url.origin}/.netlify/functions/auth-check`,
      {
        headers: {
          cookie: cookieHeader,
        },
      }
    );
    const data = await response.json();
    authenticated = data.authenticated;
    username = data.username || '';
    userRole = data.role || (data.username === 'admin' ? 'super_admin' : 'admin');
  } catch (error) {
    authenticated = false;
  }
}

// Redirect to login if not authenticated
if (!authenticated) {
  return Astro.redirect('/admin/login');
}

// Only super admins can access audit logs
if (userRole !== 'super_admin') {
  return Astro.redirect('/admin/availability');
}
---

<AdminLayout title="Audit Logs - GSCC Admin" username={username} userRole={userRole} activePage="logs">
  <div class="audit-logs-page">
    <!-- Page Header -->
    <div class="page-header">
      <h1 class="page-title">Audit Logs</h1>
      <p class="page-description">View activity logs for all admin actions</p>
    </div>

    <!-- Month Selector -->
    <div class="card">
      <div class="month-selector-header">
        <h2 class="card-title">Select Month</h2>
        <button id="cleanup-btn" class="btn-secondary">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="3 6 5 6 21 6"></polyline>
            <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
          </svg>
          Cleanup Old Logs
        </button>
      </div>

      <div class="form-group">
        <label for="month-select" class="form-label">Log Month</label>
        <select id="month-select" class="form-input">
          <option value="">Select a month...</option>
        </select>
        <p class="form-hint">Logs older than 30 days can be cleaned up using the button above</p>
      </div>
    </div>

    <!-- Loading State -->
    <div id="loading-logs" class="state-container" style="display: none;">
      <div class="spinner"></div>
      <p class="state-text">Loading logs...</p>
    </div>

    <!-- Empty State -->
    <div id="empty-logs" class="card" style="display: none;">
      <div class="empty-state">
        <svg width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
          <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
          <polyline points="14 2 14 8 20 8"></polyline>
          <line x1="16" y1="13" x2="8" y2="13"></line>
          <line x1="16" y1="17" x2="8" y2="17"></line>
          <polyline points="10 9 9 9 8 9"></polyline>
        </svg>
        <h3>No logs found</h3>
        <p>There are no audit logs for the selected month.</p>
      </div>
    </div>

    <!-- Logs Table -->
    <div id="logs-container" class="card" style="display: none;">
      <div class="logs-header">
        <h2 class="card-title">Activity Log (<span id="log-count">0</span> entries)</h2>
        <div class="search-box">
          <input
            type="text"
            id="search-logs"
            placeholder="Search logs..."
            class="form-input"
          />
        </div>
      </div>

      <div class="table-container">
        <table class="logs-table">
          <thead>
            <tr>
              <th>Timestamp</th>
              <th>User</th>
              <th>Action</th>
              <th>Description</th>
              <th>Target</th>
            </tr>
          </thead>
          <tbody id="logs-tbody">
            <!-- Logs will be inserted here -->
          </tbody>
        </table>
      </div>
    </div>
  </div>
</AdminLayout>

<script>
  let allLogs = [];
  let filteredLogs = [];

  const monthSelect = document.getElementById('month-select') as HTMLSelectElement;
  const loadingLogs = document.getElementById('loading-logs')!;
  const emptyLogs = document.getElementById('empty-logs')!;
  const logsContainer = document.getElementById('logs-container')!;
  const logsTbody = document.getElementById('logs-tbody')!;
  const logCount = document.getElementById('log-count')!;
  const searchInput = document.getElementById('search-logs') as HTMLInputElement;
  const cleanupBtn = document.getElementById('cleanup-btn')!;

  // Load available months on page load
  loadMonths();

  async function loadMonths() {
    try {
      const response = await fetch('/.netlify/functions/audit-logs-months', {
        credentials: 'same-origin',
      });

      if (!response.ok) {
        throw new Error('Failed to fetch log months');
      }

      const months = await response.json();

      monthSelect.innerHTML = '<option value="">Select a month...</option>';

      months.forEach((month: string) => {
        const [year, monthNum] = month.split('-');
        const date = new Date(parseInt(year), parseInt(monthNum) - 1);
        const monthName = date.toLocaleDateString('default', {
          month: 'long',
          year: 'numeric'
        });

        const option = document.createElement('option');
        option.value = month;
        option.textContent = monthName;
        monthSelect.appendChild(option);
      });

      // Auto-select most recent month if available
      if (months.length > 0) {
        monthSelect.value = months[0];
        loadLogs(months[0]);
      }
    } catch (error) {
      console.error('Error loading months:', error);
      alert('Failed to load available log months');
    }
  }

  monthSelect.addEventListener('change', (e) => {
    const selectedMonth = (e.target as HTMLSelectElement).value;
    if (selectedMonth) {
      loadLogs(selectedMonth);
    } else {
      logsContainer.style.display = 'none';
      emptyLogs.style.display = 'none';
    }
  });

  async function loadLogs(monthKey: string) {
    const [year, month] = monthKey.split('-');

    loadingLogs.style.display = 'flex';
    logsContainer.style.display = 'none';
    emptyLogs.style.display = 'none';

    try {
      const response = await fetch(
        `/.netlify/functions/audit-logs-list?year=${year}&month=${month}`,
        { credentials: 'same-origin' }
      );

      if (!response.ok) {
        throw new Error('Failed to fetch logs');
      }

      allLogs = await response.json();

      // Sort logs in descending order (latest first)
      allLogs.sort((a: any, b: any) => new Date(b.timestamp).getTime() - new Date(a.timestamp).getTime());

      filteredLogs = [...allLogs];

      loadingLogs.style.display = 'none';

      if (allLogs.length === 0) {
        emptyLogs.style.display = 'block';
      } else {
        logsContainer.style.display = 'block';
        renderLogs();
      }
    } catch (error) {
      loadingLogs.style.display = 'none';
      console.error('Error loading logs:', error);
      alert('Failed to load logs');
    }
  }

  function renderLogs() {
    logsTbody.innerHTML = '';
    logCount.textContent = filteredLogs.length.toString();

    filteredLogs.forEach((log: any) => {
      const row = document.createElement('tr');

      const timestamp = new Date(log.timestamp);
      const formattedTime = timestamp.toLocaleString();

      row.innerHTML = `
        <td class="log-time">${formattedTime}</td>
        <td class="log-user">${log.username}</td>
        <td class="log-action">
          <span class="action-badge">${formatAction(log.action)}</span>
        </td>
        <td class="log-description">${log.description}</td>
        <td class="log-target">${log.target || '-'}</td>
      `;

      logsTbody.appendChild(row);
    });
  }

  function formatAction(action: string): string {
    return action
      .replace(/_/g, ' ')
      .split(' ')
      .map((word) => word.charAt(0).toUpperCase() + word.slice(1))
      .join(' ');
  }

  // Search functionality
  searchInput.addEventListener('input', (e) => {
    const searchTerm = (e.target as HTMLInputElement).value.toLowerCase();

    filteredLogs = allLogs.filter((log: any) => {
      return (
        log.username.toLowerCase().includes(searchTerm) ||
        log.action.toLowerCase().includes(searchTerm) ||
        log.description.toLowerCase().includes(searchTerm) ||
        (log.target && log.target.toLowerCase().includes(searchTerm))
      );
    });

    renderLogs();
  });

  // Cleanup old logs
  cleanupBtn.addEventListener('click', async () => {
    if (!confirm('Delete all audit logs older than 30 days? This cannot be undone.')) {
      return;
    }

    try {
      const response = await fetch('/.netlify/functions/audit-logs-cleanup', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ daysToKeep: 30 }),
        credentials: 'same-origin',
      });

      if (!response.ok) {
        throw new Error('Failed to cleanup logs');
      }

      const result = await response.json();
      alert(`Successfully deleted ${result.deletedCount} old log file(s)`);

      // Reload months list
      await loadMonths();
    } catch (error) {
      console.error('Error cleaning up logs:', error);
      alert('Failed to cleanup old logs');
    }
  });
</script>

