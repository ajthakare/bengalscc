---
export const prerender = false;

// Clear session cookie and redirect to login
const isProduction = import.meta.env.PROD;

// Create a cookie that expires immediately
const clearCookie = `bengals_admin_session=; Path=/; HttpOnly; SameSite=Strict; Max-Age=0${isProduction ? '; Secure' : ''}`;

// Set the cookie in response headers
Astro.response.headers.set('Set-Cookie', clearCookie);

// Redirect to login page
return Astro.redirect('/admin/login');
