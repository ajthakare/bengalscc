  <script>
    let currentSeasonId = '';
    let currentPractice = null;
    let editingPracticeId = null;

    // Utility functions for date and time
    function parseLocalDate(dateString: string): Date {
      const parts = dateString.split('-');
      return new Date(
        parseInt(parts[0]),
        parseInt(parts[1]) - 1,
        parseInt(parts[2])
      );
    }

    function formatDateDisplay(dateString: string): string {
      const date = parseLocalDate(dateString);
      return date.toLocaleDateString('en-US', {
        weekday: 'short',
        month: 'short',
        day: 'numeric',
        year: 'numeric'
      });
    }

    function formatTime12Hour(time24: string): string {
      const [hoursStr, minutes] = time24.split(':');
      const hours = parseInt(hoursStr);
      const ampm = hours >= 12 ? 'PM' : 'AM';
      const displayHour = hours === 0 ? 12 : hours > 12 ? hours - 12 : hours;
      return `${displayHour}:${minutes} ${ampm}`;
    }

    function formatTimeForInput(time12: string): string {
      const timeMatch = time12.match(/(\d+):(\d+)\s*(AM|PM)/i);
      if (!timeMatch) return '';

      let hours = parseInt(timeMatch[1]);
      const minutes = timeMatch[2];
      const period = timeMatch[3].toUpperCase();

      if (period === 'PM' && hours !== 12) {
        hours += 12;
      } else if (period === 'AM' && hours === 12) {
        hours = 0;
      }

      return `${String(hours).padStart(2, '0')}:${minutes}`;
    }

    // Initialize
    document.addEventListener('DOMContentLoaded', () => {
      loadSeasons();
      setupEventListeners();
    });

    function setupEventListeners() {
      // Create form toggle
      document.getElementById('show-create-form-btn')?.addEventListener('click', () => {
        document.getElementById('create-form-container').style.display = 'block';
        document.getElementById('show-create-form-btn').style.display = 'none';
        // Set initial defaults based on selected type (net is default)
        setPracticeDefaults();
      });

      document.getElementById('cancel-create-btn')?.addEventListener('click', hideCreateForm);
      document.getElementById('cancel-form-btn')?.addEventListener('click', hideCreateForm);

      // Form submission
      document.getElementById('create-practice-form')?.addEventListener('submit', handleCreatePractice);

      // Poll Modal
      document.getElementById('close-modal-btn')?.addEventListener('click', closeModal);
      document.querySelector('.modal-overlay')?.addEventListener('click', closeModal);

      // Announcement Modal - close on outside click
      const announcementModal = document.getElementById('announcement-modal');
      announcementModal?.addEventListener('click', (e) => {
        if (e.target === announcementModal) {
          closeAnnouncementModal();
        }
      });

      // Practice type change - set defaults
      const typeRadios = document.querySelectorAll('input[name="type"]');
      typeRadios.forEach(radio => {
        radio.addEventListener('change', setPracticeDefaults);
      });
    }

    function setPracticeDefaults() {
      const selectedType = document.querySelector('input[name="type"]:checked')?.value;
      const locationInput = document.getElementById('location');
      const timeInput = document.getElementById('time');

      if (!selectedType || !locationInput || !timeInput) return;

      // Only set defaults if fields are empty (don't override user input)
      if (selectedType === 'net') {
        if (!locationInput.value || locationInput.value === 'Ortega Park, 636 Harrow Way, Sunnyvale, CA 94087') {
          locationInput.value = 'NACL Sports Center, 1111 Felipe Ave, San Jose, CA 95122';
        }
        if (!timeInput.value || timeInput.value === '16:00') {
          timeInput.value = '19:00'; // 7:00 PM
        }
      } else if (selectedType === 'field') {
        if (!locationInput.value || locationInput.value === 'NACL Sports Center, 1111 Felipe Ave, San Jose, CA 95122') {
          locationInput.value = 'Ortega Park, 636 Harrow Way, Sunnyvale, CA 94087';
        }
        if (!timeInput.value || timeInput.value === '19:00') {
          timeInput.value = '16:00'; // 4:00 PM
        }
      }
    }

    function hideCreateForm() {
      document.getElementById('create-form-container').style.display = 'none';
      document.getElementById('show-create-form-btn').style.display = 'block';
      document.getElementById('create-practice-form').reset();
      editingPracticeId = null;
      document.querySelector('.card-title').textContent = 'Create New Practice Session';
      document.getElementById('submit-text').textContent = 'Create Practice';
    }

    async function loadSeasons() {
      try {
        const response = await fetch('/.netlify/functions/seasons-list');

        if (!response.ok) {
          throw new Error(`HTTP ${response.status}: ${response.statusText}`);
        }

        const seasons = await response.json();
        console.log('Seasons response:', seasons);

        // seasons-list returns an array directly
        if (!Array.isArray(seasons) || seasons.length === 0) {
          console.error('No seasons found');
          showError('No seasons found. Please create a season first.');
          document.getElementById('show-create-form-btn').style.display = 'none';
          return;
        }

        const activeSeason = seasons.find(s => s.isActive);

        if (activeSeason) {
          currentSeasonId = activeSeason.id;
          console.log('Active season loaded:', activeSeason.name, 'ID:', currentSeasonId);

          // Update season display
          const seasonNameEl = document.getElementById('season-name');
          if (seasonNameEl) {
            seasonNameEl.textContent = `Active Season: ${activeSeason.name}`;
            seasonNameEl.style.fontWeight = '600';
            seasonNameEl.style.color = '#10B981';
          }

          // Load practices
          loadPractices();
        } else {
          console.error('No active season found in:', seasons);
          showError('No active season found. Please go to Seasons page and click "Set Active" on a season.');
          // Hide the create button if no active season
          document.getElementById('show-create-form-btn').style.display = 'none';
        }
      } catch (error) {
        console.error('Error loading seasons:', error);
        showError('Failed to load season data: ' + (error instanceof Error ? error.message : 'Unknown error'));
      }
    }

    async function loadPractices() {
      try {
        document.getElementById('loading-state').style.display = 'flex';
        document.getElementById('error-state').style.display = 'none';
        document.getElementById('empty-state').style.display = 'none';
        document.getElementById('practices-container').style.display = 'none';

        const response = await fetch(`/.netlify/functions/practice-admin-list?seasonId=${currentSeasonId}`);
        const data = await response.json();

        document.getElementById('loading-state').style.display = 'none';

        if (!data.success || !data.data || data.data.length === 0) {
          document.getElementById('empty-state').style.display = 'flex';
          return;
        }

        const practices = data.data;
        renderPractices(practices);

        document.getElementById('practices-container').style.display = 'block';
      } catch (error) {
        console.error('Error loading practices:', error);
        document.getElementById('loading-state').style.display = 'none';
        showError('Failed to load practice sessions');
      }
    }

    function renderPractices(practices) {
      const container = document.getElementById('practices-list');
      container.innerHTML = '';

      // Separate upcoming and past practices
      const today = new Date().toISOString().split('T')[0];
      const upcoming = practices.filter(p => p.date >= today && p.status === 'active');
      const past = practices.filter(p => p.date < today || p.status !== 'active');

      // Render upcoming
      if (upcoming.length > 0) {
        const upcomingSection = document.createElement('div');
        upcomingSection.innerHTML = '<h2 style="font-size: 1.25rem; font-weight: 700; margin-bottom: 1rem;">Upcoming Practices</h2>';
        upcoming.forEach(practice => {
          upcomingSection.appendChild(createPracticeCard(practice));
        });
        container.appendChild(upcomingSection);
      }

      // Render past
      if (past.length > 0) {
        const pastSection = document.createElement('div');
        pastSection.style.marginTop = '2rem';
        pastSection.innerHTML = '<h2 style="font-size: 1.25rem; font-weight: 700; margin-bottom: 1rem;">Past Practices</h2>';
        past.forEach(practice => {
          pastSection.appendChild(createPracticeCard(practice));
        });
        container.appendChild(pastSection);
      }
    }

    function createPracticeCard(practice) {
      const card = document.createElement('div');
      card.className = 'practice-card';

      const typeEmoji = practice.type === 'net' ? 'üéæ' : 'üèüÔ∏è';
      const typeName = practice.type === 'net' ? 'Net Session' : 'Field Practice';
      const typeBadgeClass = practice.type === 'net' ? 'badge-net' : 'badge-field';

      // Calculate stats based on practice type
      let statsHTML = '';
      if (practice.type === 'net') {
        statsHTML = `
          <div class="stat-item">
            <span class="stat-label">Yes</span>
            <span class="stat-value">${practice.stats.yesCount}</span>
          </div>
          <div class="stat-item">
            <span class="stat-label">Bowling Only</span>
            <span class="stat-value">${practice.stats.bowlingOnlyCount}</span>
          </div>
          <div class="stat-item">
            <span class="stat-label">Not Available</span>
            <span class="stat-value">${practice.stats.notAvailableCount}</span>
          </div>
        `;
      } else {
        statsHTML = `
          <div class="stat-item">
            <span class="stat-label">Yes</span>
            <span class="stat-value">${practice.stats.yesCount}</span>
          </div>
          <div class="stat-item">
            <span class="stat-label">Not Available</span>
            <span class="stat-value">${practice.stats.notAvailableCount}</span>
          </div>
        `;
      }

      card.innerHTML = `
        <div class="practice-header">
          <div>
            <div class="practice-title-row">
              <h3 class="practice-title">${practice.title}</h3>
              <span class="practice-type-badge ${typeBadgeClass}">${typeEmoji} ${typeName}</span>
            </div>
            <div class="practice-details">
              <div class="practice-detail">
                üìÖ ${formatDateDisplay(practice.date)}
              </div>
              <div class="practice-detail">
                üïê ${practice.time}
              </div>
              <div class="practice-detail">
                üìç ${practice.location}
              </div>
            </div>
          </div>
        </div>

        ${practice.description ? `<p style="color: var(--color-text-body); margin-bottom: 1rem;">${practice.description}</p>` : ''}

        <div class="practice-stats">
          <div class="stat-item">
            <span class="stat-label">Responses</span>
            <span class="stat-value">${practice.stats.respondedCount}/${practice.stats.totalPlayers} (${practice.stats.responseRate}%)</span>
          </div>
          ${statsHTML}
        </div>

        ${practice.locked ? '<div class="lock-notice">üîí This practice session is locked. Members cannot vote or change their votes.</div>' : ''}

        <div class="practice-actions">
          <button class="btn-primary btn-sm" onclick="viewPoll('${practice.id}')">View Poll</button>
          <button class="btn-secondary btn-sm" onclick="generatePracticeAnnouncement('${practice.id}')" title="Generate WhatsApp announcement">üì± Generate Announcement</button>
          <button class="btn-secondary btn-sm" onclick="toggleLock('${practice.id}', ${practice.locked})" title="${practice.locked ? 'Unlock voting' : 'Lock voting'}">
            ${practice.locked ? 'üîì Unlock' : 'üîí Lock'}
          </button>
          <button class="btn-secondary btn-sm" onclick="editPractice('${practice.id}')">Edit</button>
          <button class="btn-secondary btn-sm" onclick="deletePractice('${practice.id}', '${practice.title}')">Delete</button>
        </div>
      `;

      return card;
    }

    async function handleCreatePractice(e) {
      e.preventDefault();

      const form = e.target;
      const formData = new FormData(form);

      // Format time from HH:MM to HH:MM AM/PM using utility function
      const timeValue = formData.get('time');

      if (!timeValue) {
        showToast('Please select a time', 'error');
        return;
      }

      const formattedTime = formatTime12Hour(timeValue);

      const data = {
        type: formData.get('type'),
        date: formData.get('date'),
        time: formattedTime,
        location: formData.get('location'),
        description: formData.get('description') || '',
        seasonId: currentSeasonId,
      };

      // Add practiceId if editing
      if (editingPracticeId) {
        data.practiceId = editingPracticeId;
      }

      // Validate we have a season ID
      if (!currentSeasonId) {
        showToast('No active season found. Please create a season first.', 'error');
        return;
      }

      console.log(editingPracticeId ? 'Updating practice with data:' : 'Creating practice with data:', data);

      // Show loading state
      document.getElementById('submit-text').style.display = 'none';
      document.getElementById('submit-spinner').style.display = 'inline-block';

      try {
        const endpoint = editingPracticeId ? 'practice-update' : 'practice-create';
        const response = await fetch(`/.netlify/functions/${endpoint}`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(data),
        });

        const result = await response.json();
        console.log(editingPracticeId ? 'Update' : 'Create', 'practice response:', result);

        if (result.success) {
          showToast(editingPracticeId ? 'Practice session updated successfully' : 'Practice session created successfully', 'success');
          hideCreateForm();
          loadPractices();
        } else {
          console.error(editingPracticeId ? 'Update' : 'Create', 'practice error:', result);
          showToast(result.error || (editingPracticeId ? 'Failed to update practice' : 'Failed to create practice'), 'error');
        }
      } catch (error) {
        console.error('Error', editingPracticeId ? 'updating' : 'creating', 'practice:', error);
        showToast(editingPracticeId ? 'Failed to update practice session' : 'Failed to create practice session', 'error');
      } finally {
        document.getElementById('submit-text').style.display = 'inline';
        document.getElementById('submit-spinner').style.display = 'none';
      }
    }

    async function viewPoll(practiceId) {
      try {
        const response = await fetch(`/.netlify/functions/practice-get?practiceId=${practiceId}`);
        const data = await response.json();

        if (!data.success || !data.data) {
          showToast('Failed to load practice details', 'error');
          return;
        }

        currentPractice = data.data;
        renderPollModal(currentPractice);
        document.getElementById('poll-modal').style.display = 'flex';
      } catch (error) {
        console.error('Error loading practice:', error);
        showToast('Failed to load practice details', 'error');
