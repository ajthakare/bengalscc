    function closeModal() {
      document.getElementById('poll-modal').style.display = 'none';
      currentPractice = null;
    }

    async function generatePracticeAnnouncement(practiceId) {
      try {
        // Fetch the practice details
        const response = await fetch(`/.netlify/functions/practice-get?practiceId=${practiceId}`);

        if (!response.ok) {
          showToast('Failed to load practice details', 'error');
          return;
        }

        const result = await response.json();
        const practice = result.data;

        if (!practice) {
          showToast('Practice not found', 'error');
          return;
        }

        const typeEmoji = practice.type === 'net' ? 'üéæ' : 'üèüÔ∏è';
        const typeName = practice.type === 'net' ? 'Net Session' : 'Field Practice';

        // Get players who said yes
        const yesPlayers = practice.playerAvailability
          .filter(p => p.response === 'yes')
          .map(p => p.playerName)
          .sort();

        // Get players who said bowling-only (only for net sessions)
        const bowlingOnlyPlayers = practice.type === 'net'
          ? practice.playerAvailability
              .filter(p => p.response === 'bowling-only')
              .map(p => p.playerName)
              .sort()
          : [];

        let announcement = `${typeEmoji} ${typeName}\n`;
        announcement += `${formatDateDisplay(practice.date)} at ${practice.time}\n`;
        announcement += `${practice.location}\n\n`;

        if (yesPlayers.length > 0) {
          announcement += yesPlayers.map((name, idx) =>
            `${String(idx + 1).padStart(2, ' ')}.‚Å† ‚Å†@‚Å®${name}‚Å©`
          ).join('\n') + '\n\n';
        }

        if (bowlingOnlyPlayers.length > 0) {
          announcement += 'Bowling only:\n';
          announcement += bowlingOnlyPlayers.map((name, idx) =>
            `${String(idx + 1).padStart(2, ' ')}.‚Å† ‚Å†@‚Å®${name}‚Å©`
          ).join('\n') + '\n\n';
        }

        announcement += 'Please be on time to ensure we all get max time to practice!';

        // Show modal with generated message
        document.getElementById('announcement-text').value = announcement;
        document.getElementById('announcement-modal').style.display = 'flex';
      } catch (error) {
        console.error('Error generating announcement:', error);
        showToast('Failed to generate announcement', 'error');
      }
    }

    function closeAnnouncementModal() {
      document.getElementById('announcement-modal').style.display = 'none';
    }

    async function copyAnnouncement() {
      const textarea = document.getElementById('announcement-text');
      const text = textarea.value;

      try {
        await navigator.clipboard.writeText(text);
        showToast('‚úì Copied to clipboard!', 'success');

        // Change button text temporarily
        const btn = document.getElementById('copy-announcement-btn');
        const originalText = btn.innerHTML;
        btn.innerHTML = '‚úì Copied!';
        btn.style.background = '#10b981';

        setTimeout(() => {
          btn.innerHTML = originalText;
          btn.style.background = '';
        }, 2000);
      } catch (error) {
        // Fallback for older browsers
        textarea.select();
        document.execCommand('copy');
        showToast('‚úì Copied to clipboard!', 'success');
      }
    }

    async function editPractice(practiceId) {
      try {
        // Fetch the practice details
        const response = await fetch(`/.netlify/functions/practice-get?practiceId=${practiceId}`);
        const result = await response.json();

        if (!result.success || !result.data) {
          showToast('Failed to load practice details', 'error');
          return;
        }

        const practice = result.data;

        // Set editing mode
        editingPracticeId = practiceId;

        // Show the form
        document.getElementById('create-form-container').style.display = 'block';
        document.getElementById('show-create-form-btn').style.display = 'none';

        // Update form title and button
        document.querySelector('.card-title').textContent = 'Edit Practice Session';
        document.getElementById('submit-text').textContent = 'Update Practice';

        // Populate form fields
        const form = document.getElementById('create-practice-form');

        // Set practice type
        const typeRadio = form.querySelector(`input[name="type"][value="${practice.type}"]`);
        if (typeRadio) typeRadio.checked = true;

        // Set date
        form.querySelector('#date').value = practice.date;

        // Convert time from "2:30 PM" to "14:30" format for time input using utility function
        const timeForInput = formatTimeForInput(practice.time);
        if (timeForInput) {
          form.querySelector('#time').value = timeForInput;
        }

        // Set location
        form.querySelector('#location').value = practice.location;

        // Set description
        form.querySelector('#description').value = practice.description || '';

        // Scroll to form
        document.getElementById('create-form-container').scrollIntoView({ behavior: 'smooth', block: 'start' });

      } catch (error) {
        console.error('Error loading practice for edit:', error);
        showToast('Failed to load practice details', 'error');
      }
    }

    async function toggleLock(practiceId, currentlyLocked) {
      const action = currentlyLocked ? 'unlock' : 'lock';
      const confirmMsg = currentlyLocked
        ? 'Unlock this practice session? Members will be able to vote and change their votes.'
        : 'Lock this practice session? Members will not be able to vote or change their votes.';

      if (!confirm(confirmMsg)) {
        return;
      }

      try {
        const response = await fetch('/.netlify/functions/practice-lock', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          credentials: 'same-origin',
          body: JSON.stringify({
            practiceId,
            locked: !currentlyLocked,
          }),
        });

        const result = await response.json();

        if (result.success) {
          showToast(`Practice ${action}ed successfully`, 'success');
          loadPractices();
        } else {
          showToast(result.error || `Failed to ${action} practice`, 'error');
        }
      } catch (error) {
        console.error(`Error ${action}ing practice:`, error);
        showToast(`Failed to ${action} practice`, 'error');
      }
    }

    async function deletePractice(practiceId, title) {
      if (!confirm(`Are you sure you want to delete "${title}"? This will remove all availability responses.`)) {
        return;
      }

      try {
        const response = await fetch('/.netlify/functions/practice-delete', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ practiceId }),
        });

        const result = await response.json();

        if (result.success) {
          showToast('Practice deleted successfully', 'success');
          loadPractices();
        } else {
          showToast(result.error || 'Failed to delete practice', 'error');
        }
      } catch (error) {
        console.error('Error deleting practice:', error);
        showToast('Failed to delete practice', 'error');
      }
    }

    function showError(message) {
      document.getElementById('error-text').textContent = message;
      document.getElementById('error-state').style.display = 'block';
    }

    function showToast(message, type = 'success') {
      const container = document.getElementById('toast-container');
      const toast = document.createElement('div');
      toast.className = `toast toast-${type}`;
      toast.textContent = message;

      container.appendChild(toast);

      setTimeout(() => {
        toast.remove();
      }, 3000);
    }

    // Player management functions
    let allPlayers = [];
    let availablePlayersForPractice = [];
    let selectedPlayer = null;
    let hideDropdownTimeout = null;

    async function loadAvailablePlayers() {
      try {
        const response = await fetch('/.netlify/functions/players-list?status=active');
        const players = await response.json();

        console.log('Loaded players:', players);

        if (Array.isArray(players) && players.length > 0) {
          // Filter to active players only (query already does this, but double-check)
          allPlayers = players.filter(p => p.isActive);

          // Get players already in practice
          const existingPlayerIds = currentPractice.playerAvailability.map(pa => pa.playerId);

          // Filter out players already in the practice
          availablePlayersForPractice = allPlayers.filter(p => !existingPlayerIds.includes(p.id));

          console.log('Available players to add:', availablePlayersForPractice.length);

          // Clear search input and selection
          document.getElementById('player-search-input').value = '';
          selectedPlayer = null;
          document.getElementById('add-player-btn').disabled = true;
        } else {
          console.log('No players available or empty array');
        }
      } catch (error) {
        console.error('Error loading players:', error);
      }
    }

    function filterPlayers() {
      const searchInput = document.getElementById('player-search-input');
      const dropdown = document.getElementById('player-dropdown');
      const searchQuery = searchInput.value.toLowerCase().trim();

      // Clear selection if user is typing
      if (selectedPlayer && searchInput.value !== `${selectedPlayer.firstName} ${selectedPlayer.lastName}`) {
        selectedPlayer = null;
        document.getElementById('add-player-btn').disabled = true;
      }

      // Filter players based on search query
      let filteredPlayers = availablePlayersForPractice;
      if (searchQuery) {
        filteredPlayers = availablePlayersForPractice.filter(p => {
          const fullName = `${p.firstName} ${p.lastName}`.toLowerCase();
          return fullName.includes(searchQuery);
        });
      }

      // Sort alphabetically
      filteredPlayers.sort((a, b) =>
        `${a.firstName} ${a.lastName}`.localeCompare(`${b.firstName} ${b.lastName}`)
      );

      // Populate dropdown
      if (filteredPlayers.length === 0) {
        dropdown.innerHTML = '<div class="player-dropdown-empty">No players found</div>';
      } else {
        dropdown.innerHTML = filteredPlayers
          .map(p => `
            <div class="player-dropdown-item" onclick="selectPlayer('${p.id}', '${p.firstName}', '${p.lastName}')">
              ${p.firstName} ${p.lastName}
            </div>
          `)
          .join('');
      }

      // Show dropdown
      dropdown.style.display = 'block';
    }

    function selectPlayer(playerId, firstName, lastName) {
      const fullName = `${firstName} ${lastName}`;
      const player = availablePlayersForPractice.find(p => p.id === playerId);

      if (player) {
        selectedPlayer = player;
        document.getElementById('player-search-input').value = fullName;
        document.getElementById('add-player-btn').disabled = false;
        hideDropdown();
      }
    }

    function hideDropdown() {
      document.getElementById('player-dropdown').style.display = 'none';
    }

    function hideDropdownDelayed() {
      // Delay hiding to allow click events on dropdown items to fire
      hideDropdownTimeout = setTimeout(() => {
        hideDropdown();
      }, 200);
    }

    async function addPlayerToPractice() {
      if (!selectedPlayer) {
        showToast('Please select a player', 'error');
        return;
      }

      const playerId = selectedPlayer.id;
      const playerName = `${selectedPlayer.firstName} ${selectedPlayer.lastName}`;

      // Get initial status based on practice type
      let initialResponse = null;
      if (currentPractice.type === 'net') {
        // For net practices, get selected status from dropdown
        const statusSelect = document.getElementById('player-status-select');
        initialResponse = statusSelect.value;
      } else {
        // For field practices, always set to 'yes'
        initialResponse = 'yes';
      }

      try {
        const response = await fetch('/.netlify/functions/practice-player-manage', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          credentials: 'same-origin',
          body: JSON.stringify({
            practiceId: currentPractice.id,
            playerId,
            playerName,
            action: 'add',
            initialResponse: initialResponse,
          }),
        });

        const result = await response.json();

        if (result.success) {
          showToast(result.message, 'success');
          // Reload the poll modal
          viewPoll(currentPractice.id);
        } else {
          showToast(result.error || 'Failed to add player', 'error');
        }
      } catch (error) {
        console.error('Error adding player:', error);
        showToast('Failed to add player', 'error');
      }
    }

    async function removePlayerFromPractice(playerId, playerName) {
      if (!confirm(`Remove ${playerName} from this practice session?`)) {
        return;
      }

      try {
        const response = await fetch('/.netlify/functions/practice-player-manage', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          credentials: 'same-origin',
          body: JSON.stringify({
            practiceId: currentPractice.id,
            playerId,
            action: 'remove',
          }),
        });

        const result = await response.json();

        if (result.success) {
          showToast(result.message, 'success');
          // Reload the poll modal
          viewPoll(currentPractice.id);
        } else {
          showToast(result.error || 'Failed to remove player', 'error');
        }
      } catch (error) {
        console.error('Error removing player:', error);
        showToast('Failed to remove player', 'error');
      }
    }

    // Expose functions globally
    window.viewPoll = viewPoll;
    window.editPractice = editPractice;
    window.deletePractice = deletePractice;
    window.toggleLock = toggleLock;
    window.generatePracticeAnnouncement = generatePracticeAnnouncement;
    window.closeAnnouncementModal = closeAnnouncementModal;
    window.copyAnnouncement = copyAnnouncement;
    window.addPlayerToPractice = addPlayerToPractice;
    window.removePlayerFromPractice = removePlayerFromPractice;
    window.filterPlayers = filterPlayers;
    window.selectPlayer = selectPlayer;
    window.hideDropdownDelayed = hideDropdownDelayed;
  </script>
