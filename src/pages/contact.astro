---
import Layout from '../layouts/Layout.astro';
import Section from '../components/Section.astro';
import SocialMediaLinks from '../components/SocialMediaLinks.astro';
import { SITE_CONFIG } from '../config';
---

<Layout title="Contact Us - Bengals Cricket Club">
    <h1 class="text-4xl sm:text-5xl font-bold mb-8">Contact Us</h1>

    <div class="grid md:grid-cols-2 gap-8 sm:gap-12">
        <Section>
            <h2 class="text-2xl sm:text-3xl font-bold mb-6">Send Us a Message</h2>
            <form name="contact" method="POST" data-netlify="true" netlify-honeypot="bot-field" class="space-y-6">
                {/* Hidden fields for Netlify */}
                <input type="hidden" name="form-name" value="contact" />
                <div style="display: none;">
                    <label>Don't fill this out if you're human: <input name="bot-field" /></label>
                </div>

                <div>
                    <label for="name" class="block text-sm font-medium mb-2">Name *</label>
                    <input
                        type="text"
                        id="name"
                        name="name"
                        required
                        class="input w-full"
                        placeholder="Your name"
                    />
                </div>

                <div>
                    <label for="email" class="block text-sm font-medium mb-2">Email</label>
                    <input
                        type="email"
                        id="email"
                        name="email"
                        class="input w-full"
                        placeholder="your.email@example.com"
                    />
                </div>

                <div>
                    <label for="phone" class="block text-sm font-medium mb-2">Phone Number *</label>
                    <input
                        type="tel"
                        id="phone"
                        name="phone"
                        required
                        class="input w-full"
                        placeholder="+1 (555) 123-4567"
                    />
                </div>

                <div>
                    <label for="message" class="block text-sm font-medium mb-2">Message *</label>
                    <textarea
                        id="message"
                        name="message"
                        required
                        rows="6"
                        class="input w-full resize-none"
                        placeholder="Tell us about your interest in joining or your questions..."
                    ></textarea>
                </div>

                {/* Netlify reCAPTCHA v2 */}
                <div data-netlify-recaptcha="true"></div>

                <button type="submit" class="btn btn-lg w-full">
                    Send Message
                </button>
            </form>
        </Section>

        <div class="space-y-8">
            <Section>
                <h2 class="text-2xl sm:text-3xl font-bold mb-6">Contact Information</h2>
                <div class="space-y-4">
                    <a
                        href={`mailto:${SITE_CONFIG.email}`}
                        class="flex items-center gap-3 p-4 bg-gray-50 border border-gray-200 rounded-lg hover:bg-gray-100 hover:border-primary transition-colors"
                    >
                        <span class="text-2xl">üìß</span>
                        <div>
                            <div class="font-semibold text-gray-900">Email</div>
                            <div class="text-sm text-gray-600">{SITE_CONFIG.email}</div>
                        </div>
                    </a>

                    <a
                        href={`tel:${SITE_CONFIG.phone}`}
                        class="flex items-center gap-3 p-4 bg-gray-50 border border-gray-200 rounded-lg hover:bg-gray-100 hover:border-primary transition-colors"
                    >
                        <span class="text-2xl">üìû</span>
                        <div>
                            <div class="font-semibold text-gray-900">Phone</div>
                            <div class="text-sm text-gray-600">{SITE_CONFIG.phone}</div>
                        </div>
                    </a>

                    <div class="flex items-center gap-3 p-4 bg-gray-50 border border-gray-200 rounded-lg">
                        <span class="text-2xl">üìç</span>
                        <div>
                            <div class="font-semibold text-gray-900">Location</div>
                            <div class="text-sm text-gray-600">{SITE_CONFIG.location}</div>
                        </div>
                    </div>
                </div>
            </Section>

            <Section>
                <h2 class="text-2xl sm:text-3xl font-bold mb-6">Follow Us</h2>
                <SocialMediaLinks layout="vertical" size="md" />
            </Section>
        </div>
    </div>
</Layout>
