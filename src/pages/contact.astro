---
import Layout from '../layouts/Layout.astro';
import Section from '../components/Section.astro';
import { SITE_CONFIG } from '../config';
---

<Layout title="Contact Us - Bengals Cricket Club">
    <h1 class="text-4xl sm:text-5xl font-bold mb-8">Get in Touch</h1>

    <div class="grid md:grid-cols-2 gap-8 sm:gap-12">
        <Section>
            <h2 class="text-2xl sm:text-3xl font-bold mb-6">Send Us a Message</h2>
            <form class="space-y-6">
                <div>
                    <label for="name" class="block text-sm font-medium mb-2">Name</label>
                    <input
                        type="text"
                        id="name"
                        name="name"
                        required
                        class="input w-full"
                        placeholder="Your name"
                    />
                </div>

                <div>
                    <label for="email" class="block text-sm font-medium mb-2">Email</label>
                    <input
                        type="email"
                        id="email"
                        name="email"
                        required
                        class="input w-full"
                        placeholder="your.email@example.com"
                    />
                </div>

                <div>
                    <label for="message" class="block text-sm font-medium mb-2">Message</label>
                    <textarea
                        id="message"
                        name="message"
                        required
                        rows="6"
                        class="input w-full resize-none"
                        placeholder="Tell us about your interest in joining or your questions..."
                    ></textarea>
                </div>

                <button type="submit" class="btn btn-lg w-full">
                    Send Message
                </button>
            </form>
        </Section>

        <div class="space-y-8">
            <Section>
                <h2 class="text-2xl sm:text-3xl font-bold mb-6">Contact Information</h2>
                <div class="space-y-6">
                    <div class="bg-gray-50 border border-gray-200 rounded-lg p-6">
                        <h3 class="text-lg font-semibold text-primary mb-2">Email</h3>
                        <a href={`mailto:${SITE_CONFIG.email}`} class="text-gray-800 hover:text-primary transition-colors">
                            {SITE_CONFIG.email}
                        </a>
                    </div>

                    <div class="bg-gray-50 border border-gray-200 rounded-lg p-6">
                        <h3 class="text-lg font-semibold text-primary mb-2">Location</h3>
                        <p class="text-gray-800">{SITE_CONFIG.location}</p>
                    </div>
                </div>
            </Section>

            <Section>
                <h2 class="text-2xl sm:text-3xl font-bold mb-6">Follow Us</h2>
                <div class="space-y-4">
                    <a
                        href={SITE_CONFIG.social.instagram.url}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="flex items-center gap-3 p-4 bg-gray-50 border border-gray-200 rounded-lg hover:bg-gray-100 hover:border-primary transition-colors"
                    >
                        <span class="text-2xl">ðŸ“·</span>
                        <div>
                            <div class="font-semibold">{SITE_CONFIG.social.instagram.label}</div>
                            <div class="text-sm text-gray-600">{SITE_CONFIG.social.instagram.description}</div>
                        </div>
                    </a>

                    <a
                        href={SITE_CONFIG.social.youtube.url}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="flex items-center gap-3 p-4 bg-gray-50 border border-gray-200 rounded-lg hover:bg-gray-100 hover:border-primary transition-colors"
                    >
                        <span class="text-2xl">ðŸŽ¥</span>
                        <div>
                            <div class="font-semibold">{SITE_CONFIG.social.youtube.label}</div>
                            <div class="text-sm text-gray-600">{SITE_CONFIG.social.youtube.description}</div>
                        </div>
                    </a>
                </div>
            </Section>
        </div>
    </div>
</Layout>
