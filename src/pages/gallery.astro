---
export const prerender = false;

import Layout from '../layouts/Layout.astro';
import Section from '../components/Section.astro';
import { SITE_CONFIG } from '../config';
import { readdir } from 'node:fs/promises';
import { join } from 'node:path';

// Read images from public/media folder
let galleryImages: { src: string; alt: string }[] = [];
try {
    const mediaDir = join(process.cwd(), 'public', 'media');
    const files = await readdir(mediaDir);

    galleryImages = files
        .filter(file => /\.(jpg|jpeg|png|JPG|JPEG|PNG)$/i.test(file))
        .filter(file => file !== '.DS_Store')
        .sort()
        .map(file => ({
            src: `/media/${file}`,
            alt: file.replace(/\.(jpg|jpeg|png|JPG|JPEG|PNG)$/i, '')
        }));
} catch (error) {
    console.error('Error loading gallery images:', error);
}
---

<Layout title="Gallery - Golden State Cricket Club">
    <h1 class="page-title">Media Gallery</h1>

    <Section>
        <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 gap-3 sm:gap-4">
            {galleryImages.map((image, index) => (
                <div
                    class="group border-2 border-gray-200 rounded-lg overflow-hidden hover:border-primary hover:shadow-xl transition-all cursor-pointer"
                    data-image-index={index}
                    onclick={`openLightbox(${index})`}
                    style="height: 200px;"
                >
                    <img
                        src={image.src}
                        alt={image.alt}
                        width="300"
                        height="200"
                        style="width: 100%; height: 100%; object-fit: cover; display: block;"
                    />
                </div>
            ))}
        </div>

        {/* Lightbox Modal */}
        <div id="lightbox" class="lightbox">
            <button class="lightbox-close" onclick="closeLightbox()">&times;</button>
            <button class="lightbox-prev" onclick="navigateLightbox(-1)">&#10094;</button>
            <button class="lightbox-next" onclick="navigateLightbox(1)">&#10095;</button>
            <div class="lightbox-content">
                <img id="lightbox-image" src="" alt="" />
            </div>
            <div class="lightbox-counter" id="lightbox-counter"></div>
        </div>

        {galleryImages.length === 0 && (
            <div class="text-center py-12">
                <p class="text-gray-500 text-lg">No images available yet. Add images to /public/media to display them here.</p>
            </div>
        )}
    </Section>

    <Section variant="alternate">
