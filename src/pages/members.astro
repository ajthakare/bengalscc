---
import Layout from '../layouts/Layout.astro';
import Section from '../components/Section.astro';
import StatsGrid from '../components/StatsGrid.astro';
import Card from '../components/Card.astro';

const membershipStats = [
    { label: 'Total Members', value: '160+' },
    { label: 'Youth & Students', value: '30+' },
    { label: 'Counties Covered', value: '8' }
];

const eligibleMembers = [
    {
        title: 'Adult Players',
        content: 'All skill levels welcome, from beginners to experienced cricketers'
    },
    {
        title: 'Youth & Students',
        content: 'Young cricketers looking to develop their skills in a competitive environment'
    },
    {
        title: 'Competitive & Recreational',
        content: 'Whether you play for competition or just for fun, there\'s a place for you'
    }
];

const joinSteps = [
    {
        number: '1',
        title: 'Complete Membership Form',
        content: 'Fill out our membership application with your details and cricket experience'
    },
    {
        number: '2',
        title: 'Register for NCCA League',
        content: 'Register with the Northern California Cricket Association to be eligible for league play'
    },
    {
        number: '3',
        title: 'Pay Annual Club Dues',
        content: 'Complete payment of annual membership dues to activate your membership'
    },
    {
        number: '4',
        title: 'Join Communication Channels',
        content: 'Get added to team WhatsApp groups and email lists to stay connected'
    }
];
---

<Layout title="Membership - Golden State Cricket Club">
    <h1 class="page-title">Become a Member</h1>

    <Section>
        <div class="accent-box section-centered mb-8">
            <h2 class="subsection-heading">Join Bengals Inc. Through GSCC</h2>
            <p class="text-body-base text-justified mb-4">
                When you become a member of Golden State Cricket Club (GSCC), you're joining
                <strong>Bengals Inc.</strong>, a 501(c)(3) non-profit organization. Your membership
                dues support not just competitive cricket, but also youth development, community programs,
                and cricket growth across Northern California.
            </p>
            <p class="text-body-base">
                We currently have <strong>160+ active members</strong> including <strong>30+ youth and students</strong>
                from 8 counties across the Bay Area, united by a shared passion for cricket and community.
            </p>
        </div>
    </Section>

    <Section title="Who Can Join" variant="alternate">
        <div class="grid md:grid-cols-3 gap-6">
            {eligibleMembers.map(item => (
                <Card title={item.title} content={item.content} />
            ))}
        </div>
    </Section>

    <Section variant="alternate">
        <div class="section-centered-wide">
            <h2 class="section-heading text-center">Membership Overview</h2>
            <StatsGrid stats={membershipStats} />
        </div>
    </Section>

    <Section title="How to Join">
        <div class="grid sm:grid-cols-2 gap-6 mb-12 max-w-5xl mx-auto">
            {joinSteps.map(step => (
                <div class="bg-gray-50 border border-gray-200 rounded-lg p-6 hover:bg-gray-100 transition-colors">
                    <div class="flex items-start gap-4">
                        <div class="flex-shrink-0 w-12 h-12 bg-primary rounded-full flex items-center justify-center text-2xl font-bold text-white">
                            {step.number}
                        </div>
                        <div class="flex-1">
                            <h3 class="subsection-heading heading-margin-sm">{step.title}</h3>
                            <p class="text-body-base">{step.content}</p>
                        </div>
                    </div>
                </div>
            ))}
        </div>

        <div class="accent-box section-centered">
            <h3 class="subsection-heading">Ready to Join?</h3>
            <p class="text-body-lg mb-6">
                Get in touch with us to start your membership journey with Golden State Cricket Club.
            </p>
            <a href="/contact" class="btn btn-lg">Contact Us Now</a>
        </div>
    </Section>
</Layout>
