---
import Layout from '../layouts/Layout.astro';
import Section from '../components/Section.astro';
import Card from '../components/Card.astro';
import MemberCard from '../components/MemberCard.astro';
import NonProfitBadge from '../components/NonProfitBadge.astro';
import ZeffyDonation from '../components/ZeffyDonation.astro';
import { SITE_CONFIG } from '../config';

const boardMembers = [
    { name: 'Ob Rashid', role: 'Board Chair' },
    { name: 'Razab Chowdhury', role: 'Board Vice Chair' },
    { name: 'Raiyan Mainuddin', role: 'Board Secretary' },
    { name: 'Prince Ahmed', role: 'Board Member' },
    { name: 'Anirban Paul', role: 'Board Member' }
];

const programs = [
    {
        title: 'Youth Cricket Academy',
        content: 'Free cricket training for ages 8-18, teaching fundamental skills, sportsmanship, and teamwork. Sessions held every weekend at local cricket grounds.',
        icon: 'üèè'
    },
    {
        title: 'Equipment Donation Program',
        content: 'Providing cricket gear to underprivileged players who cannot afford equipment. Ensuring financial barriers don\'t prevent participation.',
        icon: 'üéÅ'
    },
    {
        title: 'Community Cricket Clinics',
        content: 'Free clinics and workshops open to the community, introducing cricket to new players and promoting the sport across Northern California.',
        icon: 'ü§ù'
    },
    {
        title: 'Scholarship Fund',
        content: 'Financial assistance for talented young players to participate in advanced training, tournaments, and cricket development programs.',
        icon: 'üéì'
    },
    {
        title: 'Women\'s Cricket Initiative',
        content: 'Dedicated programs to grow women\'s cricket, providing coaching, equipment, and opportunities for female players of all skill levels.',
        icon: 'üë•'
    },
    {
        title: 'School Partnerships',
        content: 'Collaborating with local schools to introduce cricket as an after-school activity, building the next generation of cricket enthusiasts.',
        icon: 'üè´'
    }
];

const financialBreakdown = [
    { category: 'Youth Programs', percentage: 40, color: 'bg-blue-500' },
    { category: 'Equipment & Facilities', percentage: 30, color: 'bg-green-500' },
    { category: 'Scholarships', percentage: 20, color: 'bg-purple-500' },
    { category: 'Administration', percentage: 10, color: 'bg-gray-500' }
];
---

<Layout title="Non-Profit Foundation - Golden State Cricket Club">
    <h1 class="text-4xl sm:text-5xl font-bold mb-4">{SITE_CONFIG.nonProfit.name}</h1>

    {/* Centered Badge */}
    <div class="flex justify-center mb-4">
        <NonProfitBadge size="lg" showEIN={true} />
    </div>

    {/* Centered Donation Button */}
    <div class="flex justify-center mb-8">
        <a href="#donation-section" class="btn btn-lg inline-flex items-center gap-2">
            <span class="text-xl">üíù</span>
            Make a Donation
        </a>
    </div>

    {/* Mission & Vision */}
    <Section>
        <div class="accent-box text-center max-w-4xl mx-auto">
            <h2 class="text-3xl font-bold mb-6 text-gray-900">Our Mission</h2>
            <p class="text-xl text-gray-700 leading-relaxed">
                {SITE_CONFIG.nonProfit.mission}
            </p>
        </div>
    </Section>

    {/* Impact Stats */}
    <Section title="Our Impact" variant="alternate">
        <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
            {SITE_CONFIG.nonProfit.impactStats.map(stat => (
                <div class="stat-box text-center">
                    <div class="text-5xl mb-4">{stat.icon}</div>
                    <div class="text-4xl font-bold text-primary mb-3">{stat.value}</div>
                    <div class="text-base text-gray-700 font-semibold">{stat.label}</div>
                </div>
            ))}
        </div>
        <p class="text-center text-gray-600 max-w-3xl mx-auto">
            Since our founding in {SITE_CONFIG.nonProfit.founded}, we've been dedicated to making cricket
            accessible and fostering a love for the sport across Northern California.
        </p>
    </Section>

    {/* Programs */}
    <Section title="Our Programs">
        <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
            {programs.map(program => (
                <div class="card-elevated">
                    <div class="text-4xl mb-4">{program.icon}</div>
                    <h3 class="text-xl font-bold mb-3 text-gray-900">{program.title}</h3>
                    <p class="text-gray-600">{program.content}</p>
                </div>
            ))}
        </div>
    </Section>

    {/* Financial Transparency */}
    <Section title="Financial Transparency" variant="alternate">
        <div class="max-w-4xl mx-auto">
            <p class="text-center text-lg text-gray-700 mb-8">
                We believe in complete transparency. Here's how your donations are allocated:
            </p>

            {/* Visual Breakdown */}
            <div class="bg-white rounded-xl p-8 border-2 border-gray-200 mb-8">
                <div class="space-y-6">
                    {financialBreakdown.map(item => (
                        <div>
                            <div class="flex justify-between mb-2">
                                <span class="font-semibold text-gray-900">{item.category}</span>
                                <span class="font-bold text-primary">{item.percentage}%</span>
                            </div>
                            <div class="w-full bg-gray-200 rounded-full h-4">
                                <div class={`${item.color} h-4 rounded-full transition-all`} style={`width: ${item.percentage}%`}></div>
                            </div>
                        </div>
                    ))}
                </div>
            </div>

            <div class="grid sm:grid-cols-3 gap-6">
                <Card
                    title="Tax-Deductible"
                    content="All donations are tax-deductible to the fullest extent allowed by law. You'll receive a receipt for your records."
                />
                <Card
                    title="No Hidden Fees"
                    content="We use Zeffy for donations, which is 100% free for non-profits. Your full donation goes directly to our programs."
                />
                <Card
                    title="Annual Reports"
                    content="We publish annual financial reports and program updates to keep our community informed of our impact."
                />
            </div>
        </div>
    </Section>

    {/* Board Members */}
    <Section title="Board of Directors">
        <p class="text-center text-lg text-gray-700 mb-8 max-w-3xl mx-auto">
            Our foundation is governed by a dedicated board of directors committed to transparency,
            accountability, and advancing our mission.
        </p>
        <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6 max-w-5xl mx-auto">
            {boardMembers.map(member => (
                <MemberCard name={member.name} role={member.role} />
            ))}
        </div>
    </Section>

    {/* Donation Section */}
    <Section variant="alternate">
        <div id="donation-section" class="max-w-5xl mx-auto scroll-mt-24">
            <ZeffyDonation />

            {/* Tax Information */}
            <div class="mt-8 bg-blue-50 border-2 border-blue-200 rounded-xl p-6">
                <h3 class="text-lg font-bold text-gray-900 mb-3 text-center">Tax Deduction Information</h3>
                <p class="text-sm text-gray-700 text-center max-w-3xl mx-auto">
                    <strong>{SITE_CONFIG.nonProfit.name}</strong> is a {SITE_CONFIG.nonProfit.status}.
                    <br />
                    <strong>EIN:</strong> {SITE_CONFIG.nonProfit.ein}
                    <br /><br />
                    Donations are tax-deductible to the extent allowed by law. No goods or services were
                    provided in exchange for your donation. Please consult your tax advisor for specific
                    deduction amounts. You will receive an email receipt for your records immediately after donating.
                </p>
            </div>
        </div>
    </Section>

    {/* Call to Action */}
    <Section>
        <div class="text-center max-w-3xl mx-auto bg-gradient-to-br from-amber-50 to-amber-100 rounded-xl p-8 border-2" style="border-color: #E5C878;">
            <h2 class="text-3xl font-bold mb-4 text-gray-900">Other Ways to Help</h2>
            <p class="text-lg text-gray-700 mb-6">
                Can't donate right now? There are other ways to support our mission!
            </p>
            <div class="grid sm:grid-cols-3 gap-4">
                <a href="/members" class="btn btn-secondary">
                    Volunteer
                </a>
                <a href="/contact" class="btn btn-secondary">
                    Partner With Us
                </a>
                <a href="/gallery" class="btn btn-secondary">
                    Share Our Story
                </a>
            </div>
        </div>
    </Section>
</Layout>
